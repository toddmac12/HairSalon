@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h4>No clients have been added.</h4>
}

<h4>
  <div class="client_list">
  @foreach (Client client in Model)
  {
    <li>Client: @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
  }
  </div>
</h4>

<h4>@Html.ActionLink("Home", "Index", "Home")</h4>
<h4>@Html.ActionLink("View all Stylists", "Index", "Stylists")</h4>
<h4>@Html.ActionLink("Add new Client", "Create", "Clients")</h4>