@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h4>No Stylists have been added.</h4>
}

<h4>
  <div class="stylist_list">
@foreach (Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
  </div>
</h4>

<h4>@Html.ActionLink("Add new Stylist", "Create")</h4>
<h4>@Html.ActionLink("Add new Client", "Create", "Clients")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>