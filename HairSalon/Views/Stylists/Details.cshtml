@{
  Layout = "_Layout";
}
@model HairSalon.Models.Stylist

<h1>Details for @Html.DisplayFor(model => model.StylistName)
</h1>
<h2>Stylist Speciaility:</h2>
<p>@Html.DisplayFor(model => model.StylistDescription)</p>

<h1>Current Client List:</h1>

<h4>
  <div class="client_list">
    @foreach (HairSalon.Models.Client client in Model.Clients)
    {
      <li>Client: @Html.ActionLink($"{client.ClientName}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </div>
</h4>

<h4>@Html.ActionLink("Add new Client", "Create", "Clients")</h4>
<h4>@Html.ActionLink("Edit Stylist", "Edit", new { id =Model.StylistId })</h4>
<h4>@Html.ActionLink("Delete Stylist", "Delete", new { id =Model.StylistId })</h4>
<h4>@Html.ActionLink("Back to Stylist List", "Index" )</h4>
